<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jj.dementiahelper.AddLocation"
    tools:showIn="@layout/activity_add_location">

    <!-- All the labels -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="20sp"
        android:id="@+id/name"
        android:layout_alignBaseline="@+id/nameField"
        android:layout_alignBottom="@+id/nameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="20sp"
        android:id="@+id/address"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/nameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City: "
        android:textSize="20sp"
        android:id="@+id/city"
        android:layout_below="@+id/addressField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:textSize="20sp"
        android:text="State:"
        android:layout_alignBaseline="@+id/cityField"
        android:layout_alignBottom="@+id/cityField"
        android:layout_toLeftOf="@+id/stateField"
        android:layout_toStartOf="@+id/stateField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zip"
        android:textSize="20sp"
        android:text="Zip:"
        android:layout_alignBaseline="@+id/stateField"
        android:layout_alignBottom="@+id/stateField"
        android:layout_toLeftOf="@+id/zipField"
        android:layout_toStartOf="@+id/zipField" />

    <!-- All the text fields -->
    <EditText
        android:id="@+id/nameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/addressField"
        android:layout_alignStart="@+id/addressField" />

    <EditText
        android:id="@+id/addressField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/address"
        android:layout_toEndOf="@+id/address" />

    <EditText
        android:id="@+id/cityField"
        android:layout_width="75sp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/city"
        android:layout_alignBottom="@+id/city"
        android:layout_toRightOf="@+id/city" />

    <EditText
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/zipField"
        android:layout_alignBaseline="@+id/zip"
        android:layout_alignBottom="@+id/zip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/stateField"
        android:layout_alignBaseline="@+id/state"
        android:layout_alignBottom="@+id/state"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title" />
</RelativeLayout>
